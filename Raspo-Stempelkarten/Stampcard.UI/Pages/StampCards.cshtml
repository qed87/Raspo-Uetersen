@page "/Teams/{Team}/StampCards"
@model StampCards
@tagHelperPrefix x:

@{
    ViewData["Title"] = "Stempelkarten - " + Model.Team;
}

<h2>Stempelkarten - @Model.Team</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Spieler</th>
        <th scope="col">Geschäftsjahr</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Items.Count > 0)
    {
        @for (var i = 0; i < Model.Items.Count; i++)
        {
            var itemId = Model.Items[i].Id;
            <tr>
                <td>@(i + 1)</td>
                <td>
                    @Model.Items[i].PlayerName
                </td>
                <td>
                    @Model.Items[i].AccountingYear
                </td>
                <td>
                    <x:a class="btn btn-dark" asp-page="Stamps" asp-route-team="@Model.Team" asp-route-stampCardId="@itemId">
                        <i class="bi bi-credit-card-2-front"> Stempelkarte bearbeiten</i>
                    </x:a>
                    <x:a class="btn btn-dark" asp-route-id="@itemId" asp-page-handler="delete" data-loading="true">
                        <i class="bi bi-trash3-fill"> Stempelkarte löschen</i>
                    </x:a>
                </td>
            </tr>
        }
    }
    else
    {
        <td colspan="4">Keine Daten</td>
    }
    </tbody>
</table>

<x:form method="post" asp-page="">
    <!-- Validation summary -->
    <x:div asp-validation-summary="All" class="alert alert-danger mb-3" role="alert">
    </x:div>
    <div class="row g-3 mb-3">
        <div class="col-auto">
            <x:label asp-for="PlayerName">Spieler</x:label>
            <x:select asp-for="PlayerName" asp-items="@Model.Players" class="form-control">
            </x:select>
        </div>
        <div class="col-auto">
            <x:label asp-for="AccountingYear">Geschäftsjahr</x:label>
            <x:input asp-for="AccountingYear" class="form-control"/>
        </div>
    </div>
    <div class="mb-3">
        <x:button type="submit" class="btn-primary btn" asp-page-handler="manual">Anlegen</x:button>
    </div>
    <div class="mb-3">
        <x:button type="submit" class="btn-primary btn" asp-page-handler="auto">Automatisch füllen</x:button>
    </div>
</x:form>