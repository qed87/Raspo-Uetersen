@page "/Teams/{Team}/Players"
@using SmartBreadcrumbs.Nodes
@model Players
@tagHelperPrefix x:

@{
    ViewData["Title"] = "Spieler: " + Model.Team;
    ViewData["BreadcrumbNode"] = new RazorPageBreadcrumbNode("Players", "Spielerübersicht")
    {
        Parent = new RazorPageBreadcrumbNode("Index", "Startseite"),
        RouteValues = new Dictionary<string, object>
        {
            { "Team", Model.Team }
        }
    };
}

<h2>Spielerverwaltung: @Model.Team</h2>

<x:form asp-page="" method="post">
    <!-- Validation summary -->
    <x:div asp-validation-summary="All" class="alert alert-danger" role="alert">
    </x:div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Vorname</th>
            <th scope="col">Nachname</th>
            <th scope="col">Geburtsdatum</th>
            <th scope="col">Geburtsort</th>
            <th scope="col">Aktiviert</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Items.Count > 0)
        {
            @for (var i = 0; i < Model.Items.Count; i++)
            {
                var itemId = Model.Items[i].Id;
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        @Model.Items[i].FirstName
                    </td>
                    <td>
                        @Model.Items[i].LastName
                    </td>
                    <td>
                        @Model.Items[i].Birthdate
                    </td>
                    <td>
                        @Model.Items[i].Birthplace
                    </td>
                    <td>
                        <x:input asp-for="Items[i].Active" class="form-check-input" type="checkbox" disabled="true" />
                    </td>
                    <td>
                        <x:a class="btn btn-dark" asp-page="Player" asp-route-team="@Model.Team" asp-route-id="@itemId">
                            <i class="bi bi-person-fill"> Spieler bearbeiten</i>
                        </x:a>
                        <x:a class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash3-fill"> Spieler löschen</i>
                        </x:a>
                        <!-- Modal -->
                        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Wirklich löschen?</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Möchten Sie den <strong>Spieler: @Model.Items[i].LastName, @Model.Items[i].FirstName</strong> endgültig löschen?<br>
                                        Diese Aktion kann <strong>nicht</strong> rückgängig gemacht werden.
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                                        <x:a class="btn btn-danger" asp-route-id="@itemId" asp-page-handler="delete" data-loading="true">Ja, löschen</x:a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">Keine Daten</td>
            </tr>
        }
        
        </tbody>
    </table>

    <div class="row g-3 mb-3">
        <div class="col-auto">
            <x:label asp-for="NewPlayer.FirstName" class="form-label">Vorname</x:label>
            <x:input asp-for="NewPlayer.FirstName" class="form-control"/>
        </div>
        <div class="col-auto">
            <x:label asp-for="NewPlayer.LastName" class="form-label">Nachname</x:label>
            <x:input asp-for="NewPlayer.LastName" class="form-control"/>
        </div>
        <div class="col-auto">
            <x:label asp-for="NewPlayer.Birthdate" class="form-label">Geburtsjahr</x:label>
            <x:input asp-for="NewPlayer.Birthdate" class="form-control"/>
        </div>
        <div class="col-auto">
            <x:label asp-for="NewPlayer.Birthplace" class="form-label">Geburtsort</x:label>
            <x:input asp-for="NewPlayer.Birthplace" class="form-control"/>
        </div>
    </div>
    <button type="submit" class="btn-primary btn">Anlegen</button>
</x:form>